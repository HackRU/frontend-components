{
    "name": "lcl",
    "version": "1.0.0",
    "description": "HackRU Component Library",
    "author": "hackru",
    "license": "MIT",
    "repository": "https://github.com/HackRU/frontend-components",
    "main": "dist/lcl.js",
    "jsnext:main": "dist/index.es.js",
    "engines": {
        "node": ">=8",
        "npm": ">=5"
    },
    "scripts": {
        "test": "cross-env CI=1 react-scripts test --env=jsdom",
        "test:watch": "react-scripts test --env=jsdom",
        "build:lcl": "rollup -c",
        "build:exe": "cd example/ && npm run build",
        "build:stg": "styleguidist build",
        "build": "npm run build:lcl && npm run build:exe && npm run build:stg",
        "dev:lcl": "rollup -c -w",
        "dev:exe": "cd example/ && npm run start",
        "dev:stg": "styleguidist server",
        "dev": "concurrently --kill-others --names \" LCL , EXE , STG \" -c \"bgBlue.bold,bgGreen.bold,bgRed.bold\" \"npm run dev:lcl\" \"npm run dev:exe\" \"npm run dev:stg\"",
        "prepare": "npm run build",
        "predeploy": "cd example && npm install && npm run build",
        "deploy": "gh-pages -d example/build",
        "postinstall": "rimraf package-lock.json"
    },
    "peerDependencies": {
        "prop-types": "^15.5.4",
        "react": "^15.0.0 || ^16.0.0",
        "react-dom": "^15.0.0 || ^16.0.0"
    },
    "devDependencies": {
        "@svgr/rollup": "^2.4.1",
        "babel-core": "^6.26.3",
        "babel-eslint": "^10.0.1",
        "babel-plugin-external-helpers": "^6.22.0",
        "babel-preset-env": "^1.7.0",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "bootstrap": "^4.3.1",
        "concurrently": "^4.1.0",
        "cross-env": "^5.1.4",
        "eslint": "^5.0.1",
        "eslint-config-standard": "^11.0.0",
        "eslint-config-standard-react": "^6.0.0",
        "eslint-plugin-import": "^2.13.0",
        "eslint-plugin-node": "^7.0.1",
        "eslint-plugin-promise": "^4.0.0",
        "eslint-plugin-react": "^7.10.0",
        "eslint-plugin-standard": "^3.1.0",
        "gh-pages": "^1.2.0",
        "node-sass": "^4.11.0",
        "react": "^16.4.1",
        "react-dom": "^16.4.1",
        "react-scripts": "^3.0.1",
        "react-styleguidist": "^9.1.2",
        "reactstrap": "^8.0.0",
        "rollup": "^1",
        "rollup-plugin-babel": "^3.0.7",
        "rollup-plugin-commonjs": "^9.1.3",
        "rollup-plugin-copy": "^2.0.1",
        "rollup-plugin-node-resolve": "^3.3.0",
        "rollup-plugin-peer-deps-external": "^2.2.0",
        "rollup-plugin-postcss": "^2.0.3",
        "rollup-plugin-sass": "^1.2.2",
        "rollup-plugin-url": "^1.4.0"
    },
    "files": [
        "dist"
    ],
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.18",
        "@fortawesome/free-solid-svg-icons": "^5.8.2",
        "@fortawesome/react-fontawesome": "^0.1.4",
        "core-js": "^3.1.3"
    }
}
